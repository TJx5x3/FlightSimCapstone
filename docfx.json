{
  "$schema": "https://raw.githubusercontent.com/dotnet/docfx/main/schemas/docfx.schema.json",
  "metadata": [
    {
      "src": [
        {
          "src": "C:/Users/jason/source/repos/FlightSimCapstone/FlightSimCapstone/bin/x64/Debug",  // Full path to the Debug folder
          "files": [
            "FlightSimCapstone.exe",         
            "FlightSimCapstone.xml"          
          ]
        }
      ],
      "dest": "api"
    }
  ],
  "build": {
    "content": [
      {
        "files": [
          "**/*.{md,yml}"                  
        ],
        "exclude": [
          "_site/**"
        ]
      }
    ],
    "resource": [
      {
        "files": [
          "images/**"                      
        ]
      }
    ],
    "output": "_site",                        
    "template": [
      "default",
      "modern"
    ],
    "globalMetadata": {
      "_appName": "FlightSimDocFx",
      "_appTitle": "FlightSimCapstone Documentation",
      "_enableSearch": true
    }
  }
}
